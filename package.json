{
  "name": "claude-code-best-practices-hub",
  "version": "1.0.0",
  "description": "Claude Code 最佳实践文档中心 - 集中化的文档平台，自动爬取和整合最佳实践资源",
  "main": "index.js",
  "scripts": {
    "dev": "mint dev",
    "build": "echo 'Using Mintlify hosting'",
    "preview": "mint dev",
    "check-links": "mintlify broken-links docs",
    "crawl:ctok": "node scripts/crawlers/ctok-crawler.js",
    "crawl:cookbook": "node scripts/crawlers/cookbook-crawler.js",
    "crawl:all": "npm run crawl:ctok && npm run crawl:cookbook",
    "content:process": "node scripts/content-manager.js process",
    "content:validate": "node scripts/content-manager.js validate",
    "content:index": "node scripts/content-manager.js generate-index",
    "setup": "npm install && npm run crawl:all",
    "test": "npm run check-links && npm run content:validate"
  },
  "keywords": [
    "claude-code",
    "best-practices",
    "documentation",
    "ai-coding",
    "developer-tools",
    "mintlify"
  ],
  "author": "Claude Code Community",
  "license": "MIT",
  "dependencies": {
    "@mendable/firecrawl-js": "^1.21.1",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.0.0",
    "node-html-markdown": "^1.3.0",
    "ora": "^5.4.1",
    "path": "^0.12.7",
    "puppeteer": "^24.17.0",
    "turndown": "^7.2.1",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "mintlify": "^4.0.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-code-best-practices-hub.git"
  },
  "bugs": {
