        ]
      },
      {
        "tab": "工具扩展",
        "groups": [
          {
            "group": "开发工具",
            "pages": [
              "docs/tools/ccpm-project-manager",
              "docs/tools/claude-code-router", 
              "docs/tools/claude-code-templates",
              "docs/tools/context-engineering"
            ]
