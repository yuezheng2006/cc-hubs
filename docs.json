{
  "$schema": "https://mintlify.com/schema.json",
  "name": "CC-Hubs",
  "description": "Claude Code Best Practices Hub - 一个全面的代码实践技巧社区",
  "theme": "mint",
  "modeToggle": {
    "default": "dark",
    "isHidden": false
  },
  "logo": {
    "light": "/images/light.svg",
    "dark": "/images/dark.svg"
  },
  "favicon": "/images/light.svg",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0A6B56"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/anthropics/claude-code"
      },
      {
        "label": "官方文档",
        "href": "https://claude.ai/code"
      }
    ]
  },
  "mermaid": true,
  "codeblocks": {
    "syntaxHighlighting": {
      "theme": "github-dark"
    },
    "languageSupport": {
      "javascript": true,
      "typescript": true,
      "python": true,
      "bash": true,
      "shell": true,
      "json": true,
      "yaml": true,
      "markdown": true,
      "html": true,
      "css": true,
      "jsx": true,
      "tsx": true,
      "go": true,
      "rust": true,
      "java": true,
      "cpp": true,
      "c": true,
      "swift": true,
      "kotlin": true,
      "php": true,
      "ruby": true,
      "sql": true
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/anthropics/claude-code",
      "website": "https://claude.ai/code"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "指南文档",
        "groups": [
          {
            "group": "快速开始",
            "pages": [
              "introduction",
              "docs/guides/claude-code-official-docs",
              "docs/guides/claude-code-cookbook"
            ]
          },
          {
            "group": "最佳实践",
            "pages": [
              "docs/guides/best-practices",
              "docs/guides/ai-development-guide", 
              "docs/guides/shipping-real-code",
              "docs/guides/production-workflow",
              "docs/guides/builder-guide",
              "docs/guides/onevcat-experience",
              "docs/guides/claude-as-computer",
              "docs/guides/how-i-use-claude",
              "docs/guides/six-weeks-experience",
              "docs/guides/coding-evolution",
              "docs/guides/cal-rueb-tips",
              "docs/guides/setup-tips"
            ]
          },
          {
            "group": "社区技巧", 
            "pages": [
              "docs/guides/community-tips",
              "docs/guides/code-simplifier",
              "docs/guides/trust-init-command",
              "docs/guides/claude-life-os"
            ]
          },
          {
            "group": "进阶技巧",
            "pages": [
              "docs/guides/claude-complete-guide",
              "docs/guides/claude-best-practices", 
